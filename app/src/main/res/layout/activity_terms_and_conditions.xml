<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TermsAndConditionsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Car Check"
            android:textSize="@dimen/_18sdp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/text_desc"
        android:layout_marginTop="?attr/actionBarSize"
        android:textColor="#000"
        android:textSize="@dimen/_12ssp"
        android:layout_marginLeft="@dimen/_35sdp"
        android:padding="@dimen/_10sdp"
        android:text="YOUR LABEL"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_desc"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="#093558"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/ic_rounded_corner_black_24dp" />

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_one"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="MWE-08-0237"
                    android:textColor="#000"
                    android:textSize="@dimen/_16ssp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/text_desc"
        android:spinnerMode="dialog"
        android:layout_alignParentRight="true"
        android:layout_marginTop="44dp"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginTop="@dimen/_19sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/_10sdp"
            android:text="@string/app_details"
            android:textSize="@dimen/_14sdp" />

        <Switch
            android:id="@+id/switch_btn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:textColor="#000"
        android:textSize="@dimen/_14ssp"
        android:padding="@dimen/_10sdp"
        android:text="@string/app_final"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_100sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="#093558"
        android:id="@+id/btn_checkcar"
        android:layout_height="@dimen/_90sdp">


        <TextView
            android:id="@+id/btn_opencamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom"
            android:background="#093558"
            android:text="Next"
            android:textSize="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_125sdp"
            android:layout_marginBottom="38dp"
            android:textColor="#ffff"  />
        <View
            android:layout_centerInParent="true"
            android:background="@drawable/lineborderwhite"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_5sdp" />
    </RelativeLayout>
    <!--<ImageButton
        android:id="@+id/btn_opencamera"
        android:layout_alignParentBottom="true"
        android:background="#fed500"
        android:textColor="#000"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp" />-->
</RelativeLayout>