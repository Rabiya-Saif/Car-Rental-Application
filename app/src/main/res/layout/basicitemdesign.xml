<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center|top"
    android:id="@+id/linear_layout_basic"
    android:weightSum="5"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_weight="1.5"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_70sdp">
    <LinearLayout
        android:background="@drawable/shapetry"
        android:orientation="horizontal"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/shapetry"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="#fff"
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_number"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:background="#ECF0F1"
            android:textColor="#102230"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:text="ROW-08-237"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_date"
        android:textSize="@dimen/_12sdp"
        android:textColor="#8d8d8f"
        android:gravity="center|start"
        android:text="10.02.2012,  10:15"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_weight=".6"
        android:weightSum=".9"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tyrecheck"
             android:layout_weight=".1"
            android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp" />
        <TextView
            android:id="@+id/text_gas_police"
            android:layout_weight=".1"
            android:layout_marginRight="@dimen/_3sdp"
            android:drawableLeft="@drawable/ic_check_black_24dp"
            android:drawableRight="@drawable/ic_check_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
<LinearLayout
    android:layout_weight="2.6"
        android:weightSum="2"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp">
        <TextView
            android:gravity="center|start"
            android:text="vehicle"
            android:textColor="#8d8d8f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableRight="@drawable/ic_down_black_24dp"
            android:gravity="center|start"
            android:text="ready for use"
            android:textColor="#8d8d8f"
            android:lines="1"
            android:textSize="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableRight="@drawable/tyreicon"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>